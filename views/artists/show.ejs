<!DOCTYPE html>
<html>
	<head>
		<title>
			Artists - The Music Collection
		</title>
		<link href="/css/styles.css" type="text/css" rel="stylesheet">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
	</head>
	<body>
		<!-- code starting here-->
		<section id="login-section">
			<div id="login-section-wrapper">
				<div id="logo">
						<a href="/"><img src="/images/the-music-collection-logo.png"></a>
				</div>
				<!--check here-->
				<div id="login-search-section">
					<div id="login">
						<a href="/login">Login</a>
					</div>
					<div id="login">
						<a href="/signup">Register</a>
					</div>
					<div id="search-wrapper">
						<input type="text" id="search" name="search">
					</div>
				</div>
				<!--check end-->
		</div>
		</section>
		<div style="clear:both"></div>
		<section id="navigation">
			<nav id="main">
				<a class="main-nav-item" href="/events">Upcoming Events</a>
				<a class="main-nav-item" href="/underground">Underground</a>
				<a class="main-nav-item" href="/library">Library</a>
				<div class="dropdown-menu">
					<button class="menu-btn">Artists</button>
					<div class="menu-content">
						<a class="main-nav-item-hidden" href="/artists">Browse Artists</a>
						<a class="main-nav-item-hidden" href="/artists/new">Add an Artist</a>
					</div>
				</div>
				<div class="dropdown-menu">
					<button class="menu-btn">Albums</button>
					<div class="menu-content">
						<a class="main-nav-item-hidden" href="/albums">Browse Albums</a>
						<a class="main-nav-item-hidden" href="/albums/new">Add an Album</a>
					</div>
				</div>
				</nav>
		</section>
        <section>
            <div class="album-detail">
                <div class="event-detail-wrapper">
                    <div class="event-name-wrapper">
                        <h2 class="page-title padding-10px">Artist: <%= artist.stageName %></h2>
                        <h3 class="genre-container">Genre: <%= artist.genre %></h3>
                    </div>
                    <div style="clear:both"></div>
                    <div class="event-description-wrapper">
                        <div class="profile-image">
                            <div class="underground-card">
                                <img src="/<%=artist.artistImage%>">
                            </div>
                        </div>
                        <div class="event-description">
                            <h5>This artist has been a member since: <%= artist.memberSince %></h5>
                            <p>Name: <%= artist.firstName %> <%= artist.lastName %></p>
                            <p>Number of Albums: <%= artist.albums %></p>
                            <p>Artist Label: <%= artist.label %></p>
                            <p>This artist has <%= artist.followers %> followers and <%= artist.fans %> fans.</p>
                        </div>
                    </div>
                </div>
            <div>
                <a href="/" class="btn">All Artists</a>
                <a href="/artists/edit/<%= artist.id%>" class="btn">Edit</a>
            </div>
</body>
</html>